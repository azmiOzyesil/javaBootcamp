package arkadaşSayılarJava;

public class Main {

	public static void main(String[] args) {

		int sayı1 = 1, bölümler1 = 220;
		int sayı2 = 1, bölümler2 = 284;

		for (int a = 2; a < sayı1;) {
			if (sayı1 % a == 0)
				bölümler1 += a;
			if (sayı2 % a == 0) {
				bölümler2 += a;
			}
		}
		if (bölümler1 == bölümler2)
			System.out.println(sayı1 + " ve " + sayı2 + "kardeştir");
		else
			System.out.println(sayı1 + " ve " + sayı2 + "kardeş değildir");
	}

}
