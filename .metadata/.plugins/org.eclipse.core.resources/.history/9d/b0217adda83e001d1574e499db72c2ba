
public class main {

	public static void main(String[] args) {

		int beginningNumber = 100;

		while (beginningNumber > 0) {
			if (beginningNumber % 2 == 0) {
				printInt(beginningNumber);
				printString(" is even");
			} else {
				printInt(beginningNumber);
				printString(" is odd");
			}

		}

	}

	public static void printInt(int theInt) {
		System.out.println(theInt);
	}

	public static void printString(String theString) {
		System.out.println(theString);
	}

}
